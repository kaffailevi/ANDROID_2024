<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <EditText
        android:id="@+id/ingredientNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxWidth="200dp"
        android:hint="@string/ingredient_name"
        />

    <EditText
        android:id="@+id/ingredientQuantityEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="50dp"
        android:hint="@string/_0"
        android:inputType="number" />

    <Spinner
        android:id="@+id/ingredientUnitSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/recipe_units_array"
        android:hint="@string/unit"
        android:inputType="text"
        android:maxWidth="30dp"></Spinner>


</LinearLayout>
